<section class="py-16 md:py-20 bg-[#FFF8F0]">
  <div class="container max-w-6xl mx-auto">
    
    <!-- Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-[#2D5016] mb-4">
        What to Donate
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        We accept non-perishable food items with expiration dates after December 2025
      </p>
    </div>

    <!-- Category Cards -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">

      <!-- Canned Goods -->
      <div class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition-shadow border-2 border-gray-100">
        <div class="flex items-center justify-center mb-6">
          <div class="w-20 h-20 rounded-full bg-[#FF6B35]/10 flex items-center justify-center overflow-hidden border-2 border-white shadow">
            <img
              src="https://images.unsplash.com/photo-1534483509719-3feaee7c30da?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1740"
              alt="Canned goods"
              class="object-cover w-full h-full"
              loading="lazy"
            />
          </div>
        </div>
        <h3 class="text-xl font-bold text-[#2D5016] mb-3">Canned Goods</h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Vegetables
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Fruits
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Soups
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Meats (tuna, chicken)
          </li>
        </ul>
      </div>

      <!-- Dried Goods -->
      <div class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition-shadow border-2 border-gray-100">
        <div class="flex items-center justify-center mb-6">
          <div class="w-20 h-20 rounded-full bg-[#FF6B35]/10 flex items-center justify-center overflow-hidden border-2 border-white shadow">
            <img
              src="https://images.unsplash.com/photo-1583337346971-4ed7c964fb7f?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1740"
              alt="Dried goods (beans, pasta, rice)"
              class="object-cover w-full h-full"
              loading="lazy"
            />
          </div>
        </div>
        <h3 class="text-xl font-bold text-[#2D5016] mb-3">Dried Goods</h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Beans
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Pasta
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Rice
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Oats & cereals
          </li>
        </ul>
      </div>

      <!-- Shelf-Stable -->
      <div class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition-shadow border-2 border-gray-100">
        <div class="flex items-center justify-center mb-6">
          <div class="w-20 h-20 rounded-full bg-[#FF6B35]/10 flex items-center justify-center overflow-hidden border-2 border-white shadow">
            <img
              src="https://images.unsplash.com/photo-1601507793214-77d2a926582a?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1740"
              alt="Shelf-stable food (peanut butter, nuts, honey, water)"
              class="object-cover w-full h-full"
              loading="lazy"
            />
          </div>
        </div>
        <h3 class="text-xl font-bold text-[#2D5016] mb-3">Shelf-Stable Items</h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Peanut butter
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Nuts & trail mix
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Honey & jam
          </li>
          <li class="flex items-center gap-2">
            <span class="text-[#FF6B35]">•</span> Bottled water
          </li>
        </ul>
      </div>
