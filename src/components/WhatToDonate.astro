    <!-- Important Notes -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-xl p-6 md:p-8 border-l-4 border-[#FF6B35] shadow-md">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-[#FF6B35]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h4 class="font-bold text-[#2D5016] mb-2">Please Note</h4>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start gap-2">
                <span class="text-[#FF6B35] mt-1">✓</span>
                <span>All items must have expiration dates after <strong>December 2025</strong></span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-[#FF6B35] mt-1">✓</span>
                <span>Items should be unopened and in original packaging</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-[#FF6B35] mt-1">✓</span>
                <span>Glass containers are welcome but must be carefully packaged</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>


