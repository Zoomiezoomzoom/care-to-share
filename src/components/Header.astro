---
const links = [
  { href: '/#about', label: 'About' },
  { href: '/#how-it-works', label: 'How It Works' },
  { href: '/contact', label: 'Contact' },
];
---
<header class="bg-[--color-secondary] border-b border-[color:rgb(0_0_0_/_0.06)]">
  <div class="container flex items-center justify-between py-3">
    <a href="/" class="flex items-center gap-2 font-semibold text-[--color-accent]">
      <span class="text-xl tracking-tight">
        Share<span class="text-[#FF6B35]">to</span>Care<span class="text-[--color-primary]"> | MS</span>
      </span>
      <span class="sr-only">SharetoCare Mississippi</span>
    </a>
    <nav class="hidden md:flex items-center gap-6">
      {links.map((l) => (
        <a href={l.href} class="text-sm hover:opacity-80">{l.label}</a>
      ))}
    </nav>
    <div class="hidden md:block">
      <a href="/become-a-partner" class="inline-flex items-center rounded-md bg-[#FF6B35] text-white px-4 py-2.5 text-sm font-medium shadow-sm hover:opacity-95 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#FF6B35] ring-1 ring-[rgb(0_0_0/0.1)]">Become a Collection Site</a>
    </div>
    <button class="md:hidden inline-flex items-center p-2" aria-label="Open menu" onclick="document.getElementById('mobile-nav')?.classList.toggle('hidden')">
      <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
    </button>
  </div>
  <div id="mobile-nav" class="md:hidden hidden border-t border-[color:rgb(0_0_0_/_0.06)]">
    <div class="container py-3 flex flex-col gap-3">
      {links.map((l) => (
        <a href={l.href} class="text-sm">{l.label}</a>
      ))}
      <a href="/become-a-partner" class="inline-flex items-center justify-center rounded-md bg-[--color-primary] text-white px-3 py-2 text-sm font-medium">Become a Collection Site</a>
    </div>
  </div>
</header>


