<section class="py-16 md:py-20 bg-[#FFF8F0]">
  <div class="container">
    <div class="mb-10 text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-[#2D5016]">
        Which one applies to you?
      </h2>
      <p class="mt-2 text-gray-700 max-w-2xl mx-auto text-base">
        Select the option that best matches how you want to participate!
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <!-- Drop Off Card -->
      <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 flex flex-col gap-6 hover:shadow-lg transition-all duration-300 hover:border-[#C86D4B]/30">
        <div class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full bg-[#C86D4B]/10 flex items-center justify-center group-hover:bg-[#C86D4B]/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow">
              <svg aria-hidden="true" focusable="false" class="w-6 h-6 text-[#C86D4B]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M8 7a4 4 0 0 1 8 0"/>
                <rect x="4" y="7" width="16" height="13" rx="2" ry="2"/>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-bold text-[#2D5016]">Drop Off</h3>
        </div>

        <p class="text-gray-600 leading-relaxed text-pretty">
          At your doctor, barbershop, pharmacy, or local business
        </p>

        <a href="#finder" class="w-full mt-auto inline-flex items-center justify-center rounded-md bg-transparent border-2 border-gray-300 px-4 py-2 text-sm font-medium text-[#2D5016] hover:bg-[#C86D4B] hover:text-white hover:border-[#C86D4B] transition-colors">
          Find a Drop-Off
        </a>
      </div>

      <!-- Pick Up Card -->
      <div class="group rounded-xl border-2 border-gray-200 bg-white p-8 flex flex-col gap-6 hover:shadow-lg transition-all duration-300 hover:border-[#C86D4B]/30">
        <div class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full bg-[#C86D4B]/10 flex items-center justify-center group-hover:bg-[#C86D4B]/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow">
              <svg aria-hidden="true" focusable="false" class="w-6 h-6 text-[#C86D4B]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 21s-7-4.5-7-10a7 7 0 1 1 14 0c0 5.5-7 10-7 10z"/>
                <circle cx="12" cy="11" r="3"/>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-bold text-[#2D5016]">Pick Up</h3>
        </div>

        <p class="text-gray-600 leading-relaxed text-pretty">
          Find Care to Share sites near you
        </p>

        <a href="#finder" class="w-full mt-auto inline-flex items-center justify-center rounded-md bg-transparent border-2 border-gray-300 px-4 py-2 text-sm font-medium text-[#2D5016] hover:bg-[#C86D4B] hover:text-white hover:border-[#C86D4B] transition-colors">
          Find a Pickup
        </a>
      </div>

      <!-- Join In Card -->
      <div class="group rounded-xl border-2 border-[#C86D4B] bg-[#C86D4B]/5 p-8 flex flex-col gap-6 hover:shadow-lg transition-all duration-300 hover:border-[#C86D4B]">
        <div class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full bg-[#C86D4B]/15 flex items-center justify-center group-hover:bg-[#C86D4B]/25 transition-colors">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow">
              <svg aria-hidden="true" focusable="false" class="w-6 h-6 text-[#C86D4B]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="8" r="4"/>
                <path d="M4 20a8 8 0 0 1 16 0"/>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-bold text-[#2D5016]">Join In</h3>
        </div>

        <p class="text-gray-700 leading-relaxed text-pretty">
          Register your business as a collection site
        </p>

        <a href="/become-a-partner" class="w-full mt-auto inline-flex items-center justify-center rounded-md bg-[#C86D4B] text-white px-4 py-2 text-sm font-medium shadow-md hover:bg-[#B55D3B] hover:shadow-lg transition-all">
          Become a Collection Site
        </a>
      </div>
    </div>
  </div>
</section>

