---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact â€“ Care to Share" description="Contact form and partnership inquiries for Care to Share Mississippi.">
  <section class="bg-[--color-secondary]">
    <div class="container py-10 md:py-14">
      <h1 class="text-3xl md:text-4xl">Contact</h1>
      <p class="mt-3 max-w-prose text-[rgb(0_0_0/0.7)]">Questions or partnership inquiries? Send us a message.</p>
    </div>
  </section>
  <section class="py-10">
    <div class="container">
      <form name="contact" method="POST" data-netlify="true" class="max-w-xl rounded-lg bg-white p-6 ring-1 ring-[rgb(0_0_0/0.06)] grid gap-4">
        <input type="hidden" name="form-name" value="contact" />
        <label class="text-sm font-medium text-[--color-accent]">Business/Organization name
          <input required name="org" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Contact person name
          <input required name="name" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Email
          <input required type="email" name="email" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Phone
          <input name="phone" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Message
          <textarea required name="message" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm min-h-28"></textarea>
        </label>
        <button type="submit" class="rounded-md bg-[--color-primary] text-white px-4 py-2 text-sm font-medium">Send</button>
      </form>
    </div>
  </section>
</Layout>


