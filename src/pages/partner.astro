---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Become a Partner â€“ Care to Share" description="Register your business as a Care to Share donation or pickup site.">
  <section class="bg-[--color-secondary]">
    <div class="container py-10 md:py-14">
      <h1 class="text-3xl md:text-4xl">Become a Partner Site</h1>
      <p class="mt-3 max-w-prose text-[rgb(0_0_0/0.7)]">Register your business or organization to collect donations and/or host pickups.</p>
    </div>
  </section>
  <section class="py-10">
    <div class="container">
      <form name="partner" method="POST" action="/thanks" data-netlify="true" netlify-honeypot="bot-field" class="max-w-2xl rounded-lg bg-white p-6 ring-1 ring-[rgb(0_0_0/0.06)] grid gap-4">
        <input type="hidden" name="form-name" value="partner" />
        <input type="hidden" name="bot-field" />
        <label class="text-sm font-medium text-[--color-accent]">Business/Organization name
          <input required name="org" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Contact person name
          <input required name="name" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Email
          <input required type="email" name="email" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Phone
          <input name="phone" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <div class="grid md:grid-cols-3 gap-4">
          <label class="text-sm font-medium text-[--color-accent]">Street address
            <input required name="address" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
          </label>
          <label class="text-sm font-medium text-[--color-accent]">City
            <input required name="city" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
          </label>
          <label class="text-sm font-medium text-[--color-accent]">ZIP
            <input required name="zip" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
          </label>
        </div>
        <label class="text-sm font-medium text-[--color-accent]">Type of location
          <select name="category" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm">
            <option>Medical clinic</option>
            <option>Law office</option>
            <option>Barbershop</option>
            <option>Beauty shop</option>
            <option>Pharmacy</option>
            <option>Retail store</option>
            <option>Other</option>
          </select>
        </label>
        <fieldset class="grid gap-2">
          <legend class="text-sm font-medium text-[--color-accent]">Will you accept donations, allow pickups, or both?</legend>
          <label class="inline-flex items-center gap-2 text-sm"><input type="radio" name="type" value="drop-off" /> Drop Off</label>
          <label class="inline-flex items-center gap-2 text-sm"><input type="radio" name="type" value="pick-up" /> Pick Up</label>
          <label class="inline-flex items-center gap-2 text-sm"><input type="radio" name="type" value="both" /> Both</label>
        </fieldset>
        <label class="text-sm font-medium text-[--color-accent]">Preferred hours
          <input name="hours" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm" />
        </label>
        <label class="text-sm font-medium text-[--color-accent]">Additional information
          <textarea name="notes" class="mt-1 w-full rounded-md border border-[rgb(0_0_0/0.1)] bg-white px-3 py-2 text-sm min-h-28"></textarea>
        </label>
        <button type="submit" class="rounded-md bg-[--color-primary] text-white px-4 py-2 text-sm font-medium">Submit</button>
      </form>
    </div>
  </section>
</Layout>


