---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You – Care to Share" description="Thank you for registering your site.">
  <section class="bg-[--color-secondary]">
    <div class="container py-16">
      <h1 class="text-3xl md:text-4xl">Thank you!</h1>
      <p class="mt-3 text-[rgb(0_0_0/0.75)] max-w-prose">We received your submission to become a collection site. Our team will review your details and follow up by email within 2–3 business days.</p>
      <div class="mt-6">
        <a href="/" class="btn btn-primary">Return to Home</a>
      </div>
    </div>
  </section>
</Layout>


